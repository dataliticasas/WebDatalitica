---
import Layout from "../layouts/Layout.astro";
---

<Layout title="404 | DATALITICA ">
  <section class="py-10 w-screen">
    <div class="container">
      <div class="row">
        <div class="col-sm-12">
          <div class="col-sm-10 col-sm-offset-1 text-center">
            <div class="four_zero_four w-screen">
              <h1 class="text-center text-5xl font-bold mt-10">404</h1>
            </div>

            <div class="w-screen">
              <h3 class="text-2xl font-semibold">Look like you're lost</h3>
              <p class="text-lg mb-8">
                the page you are looking for not avaible!
              </p>
              <a
                href="/"
                class="rounded-md bg-primary px-3.5 py-2.5 text-sm font-semibold text-white shadow-sm md:mr-4"
                >Go to Home</a
              >
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>

<style>
  .page_404 img {
    width: 100%;
  }
  .four_zero_four {
    background-image: url(https://cdn.dribbble.com/users/285475/screenshots/2083086/dribbble_1.gif);
    height: 400px;
    background-position: center;
  }
</style>
